<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="2"
    android:layout_row="8"
    tools:theme="@style/AppTheme">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:gravity="center"
            android:maxLines="1"
            android:text="TIP Helper"
            android:textColor="@android:color/holo_red_light" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView120"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_width="0dp"
        android:text="Enter Total" />

        <EditText
            android:id="@+id/total"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_width="0dp"
            android:gravity="end" />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView22"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lines="1"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:text="with 5% tip" />

        <EditText
            android:id="@+id/fivept"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:gravity="end"
            android:layout_width="0dp"
 />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:lines="1"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:text="with 10% tip" />

        <EditText
            android:id="@+id/tenpt"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_width="0dp"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:lines="1"
            android:paddingLeft="5dp"
            android:tag="css"
            android:layout_width="0dp"
            android:text="with 15% tip" />

        <EditText
            android:id="@+id/fifteenpt"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="end"
            android:layout_width="0dp"
            android:inputType="numberDecimal" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/seekBar"
            android:max="34"
            android:layout_width="0dp"
            android:tooltipText="slide to specify custom %" />

        <EditText
            android:id="@+id/sliderText"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:enabled="false"
            android:layout_width="0dp"
            android:text="" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView20"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_width="0dp"
            android:text="custom % tip" />

        <EditText
            android:id="@+id/custompt"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:layout_width="0dp"
            android:gravity="end" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/calculate"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_span="2"
            android:gravity="center"
            android:onClick="calculateTips"
            android:text="calculate" />
    </TableRow>

</TableLayout>